<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="it.anseltechnology.plugins.rfidsdkmaster" version="0.0.1">
    <name>RfidSdkMasterPlugin</name>
    <js-module name="RfidSdkMasterPlugin" src="www/RfidSdkMasterPlugin.js">
        <clobbers target="cordova.plugins.RfidSdkMasterPlugin"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="RfidSdkMasterPlugin">
                <param name="android-package" value="it.anseltechnology.plugins.rfidsdkmaster.RfidSdkMasterPlugin"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"/>
        <source-file src="src/android/RfidSdkMasterPlugin.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster/RfidSdkMasterPlugin"/>
        <source-file src="src/android/utils/Commands.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster/utils/Commands"/>
        <source-file src="src/android/utils/DeviceTypes.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster/utils/DeviceTypes"/>
        <!-- Include the .aar dependency -->
        <framework src="src/android/libs/rfidsdkmanager-debug.aar" custom="true" />

        <!-- Modify build.gradle to include the libs directory -->
        <config-file target="app/build.gradle" parent="/*">
            <block>
                repositories {
                    flatDir {
                        dirs 'libs'
                    }
                }
            </block>
        </config-file>

        <!-- Add the dependency in the dependencies block -->
        <config-file target="app/build.gradle" parent="dependencies">
            <block>
                implementation(name: "rfidsdkmanager-debug", ext: "aar")
            </block>
        </config-file>

        <!-- Force Gradle version update -->
        <config-file target="gradle/wrapper/gradle-wrapper.properties" parent="/*">
            <replace>
                distributionUrl=https\://services.gradle.org/distributions/gradle-7.5-all.zip
            </replace>
        </config-file>
    </platform>
</plugin>