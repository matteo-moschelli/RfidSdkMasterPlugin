<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" 
        xmlns:android="http://schemas.android.com/apk/res/android" 
        id="it.anseltechnology.plugins.rfidsdkmaster" 
        version="1.0.0">
    <name>RfidSdkMasterPlugin</name>
    <description>Plugin Cordova per includere la libreria RFID.</description>
    <license>MIT</license>
    <keywords>cordova, rfid, plugin</keywords>

    <!-- Dichiarazione della classe Java -->
    <js-module src="www/RfidSdkMasterPlugin.js" name="RfidSdkMasterPlugin">
        <clobbers target="cordova.plugins.RfidSdkMasterPlugin"/>
    </js-module>

    <!-- Definizione della piattaforma Android -->
    <platform name="android">
        <source-file src="src/android/RfidSdkMasterPlugin.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster"/>
        <source-file src="src/android/utils/Commands.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster/utils"/>
        <source-file src="src/android/utils/DeviceTypes.java" target-dir="src/it/anseltechnology/plugins/rfidsdkmaster/utils"/>
        
        <engines>
            <engine name="cordova" version=">=10.0.0"/>
            <engine name="cordova-android" version=">=10.0.0"/>
        </engines>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="RfidSdkMasterPlugin">
                <param name="android-package" value="it.anseltechnology.plugins.rfidsdkmaster.RfidSdkMasterPlugin"/>
            </feature>
        </config-file>

        <config-file parent="manifest/application" target="AndroidManifest.xml">
            <meta-data android:name="com.example.plugin" android:value="true"/>
        </config-file>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity" xmlns:android="http://schemas.android.com/apk/res/android">
            <activity android:exported="true" />
        </edit-config>

        <!-- Include the .aar dependency -->
        <lib-file src="src/android/libs/rfidsdkmanager-debug.aar"/>

        <framework src="com.android.support:support-v4:$ANDROID_SUPPORT_V4_VERSION"/>
        <preference name="ANDROID_SUPPORT_V4_VERSION" default="27.+"/>
        

        <framework src="src/android/RfidSdkMasterPlugin.gradle" custom="true" type="gradleReference"/>
        <!--
            Fino a qui compila, nuovo errore: 
            ERROR:/Users/admin/.gradle/caches/transforms-3/4dfe5a21322cd3359b0a3b9e37e1e8a3/transformed/jetified-rfidsdkmanager-debug-runtime.jar: D8: java.lang.NullPointerException
        -->

        <!-- 14/03/2025 -->
        <!--The mergeExtDexDebug FAILED error, along with D8: java.lang.NullPointerException, usually points to an issue with incompatible dependencies, a corrupted build cache, or a mismatch in API versions.-->
        
        
        
        <!-- Enable MultiDex in build.gradle -->
        <config-file target="app/build.gradle" parent="android/defaultConfig">
            <append>
                multiDexEnabled true
            </append>
        </config-file>

        <!-- Add MultiDex dependency -->
        <config-file target="app/build.gradle" parent="dependencies">
            <append>
                implementation 'androidx.multidex:multidex:2.0.1'
            </append>
        </config-file>

    </platform>
</plugin>